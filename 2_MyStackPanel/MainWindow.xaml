<Window x:Class="_2_MyStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2_MyStackPanel"
        mc:Ignorable="d"
        Title="Контейнер компановки StackPanel" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" Padding="10" Background="YellowGreen">TextBlock 1</TextBlock>
            <TextBlock Margin="10" Padding="10" Background="Yellow">TextBlock 2</TextBlock>
            <TextBlock Margin="10" Padding="10" Background="Red">TextBlock 3</TextBlock>
            <TextBlock Margin="10" Padding="10" Background="Black">TextBlock 4</TextBlock>
            <TextBlock Margin="10" Padding="10" Background="Gray">TextBlock 5</TextBlock>
        </StackPanel>
    </Grid>
</Window>
